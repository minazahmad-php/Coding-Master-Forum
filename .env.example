# Forum Environment Configuration
# Copy this file to .env and update the values

# Site Configuration
SITE_NAME="Modern Forum"
SITE_URL="http://localhost"
SITE_DESCRIPTION="A modern, feature-rich forum platform"
SITE_KEYWORDS="forum, community, discussion, modern"
SITE_AUTHOR="Forum Team"
SITE_VERSION="1.0.0"

# Environment
APP_ENV="development"
APP_DEBUG=true
APP_TIMEZONE="UTC"

# Database Configuration
DB_CONNECTION="sqlite"
DB_HOST="localhost"
DB_PORT="3306"
DB_DATABASE="storage/forum.sqlite"
DB_USERNAME=""
DB_PASSWORD=""

# Security Configuration
APP_KEY="your-secret-key-here"
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_SECURE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE="Strict"

# CSRF Protection
CSRF_TOKEN_LIFETIME=3600
CSRF_TOKEN_NAME="_token"

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Password Configuration
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true
PASSWORD_HASH_ALGORITHM="PASSWORD_ARGON2ID"

# Two-Factor Authentication
TWO_FACTOR_ENABLED=true
TWO_FACTOR_ISSUER="Modern Forum"
TWO_FACTOR_ALGORITHM="sha1"
TWO_FACTOR_DIGITS=6
TWO_FACTOR_PERIOD=30

# Email Configuration
MAIL_DRIVER="smtp"
MAIL_HOST="smtp.gmail.com"
MAIL_PORT=587
MAIL_USERNAME=""
MAIL_PASSWORD=""
MAIL_ENCRYPTION="tls"
MAIL_FROM_ADDRESS="noreply@forum.com"
MAIL_FROM_NAME="Modern Forum"

# SMS Configuration
SMS_DRIVER="twilio"
SMS_ACCOUNT_SID=""
SMS_AUTH_TOKEN=""
SMS_FROM_NUMBER=""

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES="jpg,jpeg,png,gif,pdf,doc,docx,txt"
UPLOAD_PATH="uploads"
UPLOAD_THUMBNAIL_SIZE=300

# Cache Configuration
CACHE_DRIVER="file"
CACHE_LIFETIME=3600
CACHE_PREFIX="forum_"

# Session Configuration
SESSION_DRIVER="database"
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_SECURE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE="Strict"

# Logging Configuration
LOG_LEVEL="info"
LOG_CHANNEL="file"
LOG_MAX_FILES=5
LOG_MAX_SIZE=10485760

# Social Media Integration
FACEBOOK_APP_ID=""
FACEBOOK_APP_SECRET=""
TWITTER_API_KEY=""
TWITTER_API_SECRET=""
LINKEDIN_CLIENT_ID=""
LINKEDIN_CLIENT_SECRET=""
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Payment Gateway Configuration
STRIPE_PUBLIC_KEY=""
STRIPE_SECRET_KEY=""
PAYPAL_CLIENT_ID=""
PAYPAL_CLIENT_SECRET=""
PAYPAL_MODE="sandbox"

# CDN Configuration
CDN_ENABLED=false
CDN_URL=""
CDN_CACHE_TTL=86400

# Cloud Storage Configuration
CLOUD_STORAGE_DRIVER="local"
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_DEFAULT_REGION="us-east-1"
AWS_BUCKET=""

# Monitoring Configuration
MONITORING_ENABLED=true
MONITORING_INTERVAL=60
MONITORING_ALERT_EMAIL="admin@forum.com"

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE="local"

# Search Configuration
SEARCH_DRIVER="database"
ELASTICSEARCH_HOST="localhost"
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX="forum"
ELASTICSEARCH_USERNAME=""
ELASTICSEARCH_PASSWORD=""

# Analytics Configuration
ANALYTICS_ENABLED=true
GOOGLE_ANALYTICS_ID=""
FACEBOOK_PIXEL_ID=""

# Security Headers
SECURITY_HEADERS_ENABLED=true
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000
CSP_ENABLED=true
X_FRAME_OPTIONS="DENY"
X_CONTENT_TYPE_OPTIONS="nosniff"
REFERRER_POLICY="strict-origin-when-cross-origin"

# API Configuration
API_RATE_LIMIT=1000
API_RATE_LIMIT_WINDOW=3600
API_VERSION="v1"

# WebSocket Configuration
WEBSOCKET_ENABLED=false
WEBSOCKET_HOST="localhost"
WEBSOCKET_PORT=8080
WEBSOCKET_SSL=false

# Queue Configuration
QUEUE_DRIVER="sync"
QUEUE_CONNECTION="default"

# Redis Configuration
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_DATABASE=0

# Multi-language Configuration
DEFAULT_LANGUAGE="en"
SUPPORTED_LANGUAGES="en,bn,ar,hi"
RTL_LANGUAGES="ar,he"

# Theme Configuration
DEFAULT_THEME="default"
THEME_CUSTOMIZATION_ENABLED=true

# Gamification Configuration
GAMIFICATION_ENABLED=true
POINTS_PER_POST=10
POINTS_PER_COMMENT=5
POINTS_PER_LIKE=1
POINTS_PER_SHARE=3

# Notification Configuration
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_SMS_ENABLED=false
NOTIFICATION_PUSH_ENABLED=true
NOTIFICATION_BROWSER_ENABLED=true

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="We are currently performing maintenance. Please check back later."

# Development Configuration
DEBUG_TOOLBAR_ENABLED=false
DEBUG_QUERIES_ENABLED=false
DEBUG_PERFORMANCE_ENABLED=false

# Testing Configuration
TESTING_ENABLED=false
TEST_DATABASE="storage/test.sqlite"

# Production Configuration
PRODUCTION_OPTIMIZE=true
PRODUCTION_COMPRESS=true
PRODUCTION_MINIFY=true
PRODUCTION_CACHE=true