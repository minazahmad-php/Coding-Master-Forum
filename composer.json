{
    "name": "minazahmad/coding-master-forum",
    "description": "A modern, secure, and feature-rich forum system built with PHP 8+ and SQLite",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Minaz Ahmad",
            "email": "minazahmad@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-pdo": "*",
        "ext-sqlite3": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-fileinfo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Core\\": "core/",
            "Models\\": "models/",
            "Controllers\\": "controllers/",
            "Middleware\\": "middleware/",
            "Services\\": "services/"
        },
        "files": [
            "core/Functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "analyse": "phpstan analyse",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "quality": [
            "@cs-check",
            "@analyse",
            "@test"
        ]
    }
}